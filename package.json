{
  "name": "messenger-bot",
  "version": "1.0.0",
  "description": "Messenger Bot using node & express js",
  "main": "server.ts",
  "scripts": {
    "start": "node -r dotenv/config build/server.js",
    "dev": "ts-node-dev --respawn --pretty --transpile-only -r dotenv/config server.ts",
    "build": "tsc",
    "postbuild": "cd build && yarn install --production"
  },
  "author": "Abhishek Sati",
  "license": "ISC",
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "@types/pg": "^8.6.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "knex": "^0.95.14",
    "morgan": "^1.10.0",
    "pg": "^8.7.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.6.1",
    "ts-node": "^10.2.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  }
}
